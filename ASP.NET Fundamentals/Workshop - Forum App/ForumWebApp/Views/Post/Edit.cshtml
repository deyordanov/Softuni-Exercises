@model Forum.ViewModels.Post.PostFormModel
@{
    ViewBag.Title = "Edit Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<br />

<div class="row">
    <form asp-controller="Post" asp-action="Edit" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" class="form-control" placeholder="Write your title here...."/>
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content">Content:</label>
                <input asp-for="Content" class="form-control" placeholder="Write your post here...."/>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
        </div>
        <input class="btn btn-primary mt-3" type="submit" value="Edit"/>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
